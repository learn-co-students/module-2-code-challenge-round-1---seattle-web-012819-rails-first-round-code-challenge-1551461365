<h2>Heroines!</h2>
<%= form_tag("/heroines", method: "get") do %>
  <%= label_tag(:search, "Search for powers:") %>
  <%= text_field_tag(:search, params[:search]) %>
  <%= submit_tag("Search") %>
<% end %>

<ul>
  <% @heroines.each do |heroine| %>
    <li>
      <%=  link_to heroine.super_name, heroine_path(heroine) %>
    </li>
    <br>
  <% end %>
</ul>

<h3> <%= link_to "Make a New Heroine", new_heroine_path %> </h3>
<h3> <%= link_to "See a List of Powers", powers_path %> </h3>
<h3> <%= link_to "Refresh Index", heroines_path %> </h3>
