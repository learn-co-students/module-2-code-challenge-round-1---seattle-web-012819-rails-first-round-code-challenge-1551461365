<h1>Create a Super Heroine</h1>

 <% if flash[:errors] %>
        <% flash[:errors].each do |message| %>
        <%= message %>
    <% end %>
 <% end %>

<%= form_for @heroine do |f|%>
    <h4><%= f.label :name %></h4>
    <%= f.text_field :name %><br>

    <h4><%= f.label :super_name %></h4>
    <%= f.text_field :super_name %><br>

    <h4><%= f.label :power_id %></h4>
    <%= f.collection_select :power_id, Power.all, :id, :name %><br>

    <%= f.submit %>
<% end %>