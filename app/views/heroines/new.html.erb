<% flash[:errors]&.each do |e| %>
   <h4 style="color:red;"><%= e %></h4>
<% end %>

<h1>Create a New Heroine!</h1>
<%= form_for @heroine do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :super_name %>
  <%= f.text_field :super_name %><br>

  <%= f.label "Super Power" %>
  <%= f.collection_select(:power_id, @powers, :id, :name) %>

  <%= f.submit %>
<% end %>
