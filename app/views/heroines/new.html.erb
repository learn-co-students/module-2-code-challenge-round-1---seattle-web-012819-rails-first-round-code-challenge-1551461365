<h2>Create Heroine</h2>

<div id = "error_message">
  <% flash.each do |key, value| %>
  <%= content_tag :div, value, class: "flash #{key}" %>
  <% end %>
</div>

<%= form_for(@heroine) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :super_name %>
    <%= f.text_field :super_name %>
    <br>
    <%= f.label :power %>
    <%= f.collection_select :power_id, Power.all, :id, :name %>
    <br>
  <%= f.submit %>
<% end %>
